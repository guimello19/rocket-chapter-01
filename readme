npm init -y
npm add react
npm add react-dom
npm add @babel/core @babel/cli @babel/preset-env -D
yarn babel src/index.js --out-file dist/bundle.js // apenas criando o bundle
yarn add @babel/preset-react -D
yarn add webpack webpack-cli webpack-dev-server -D // ele só tirou o webpack-dev-server na aula
yarn add babel-loader -D
yarn add html-webpack-plugin -D

// contentBase depreciado e agora é static
// rodando na porta 98080 quando roda yarn webpack serve

// eval-source-map no webpack para ver os erros de forma mais limpa, mas rodando em modo dev

 yarn add cross-env -D // lidar com arquivo .env de outra forma

 yarn add style-loader css-loader -D
 yarn add sass-loader -D
 yarn add node-sass -D

yarn add -D @pmmmwh/react-refresh-webpack-plugin react-refresh


yarn add typescript -D
yarn tsc --init
yarn add @babel/preset-typescript -D

 // pois o typescript as vezes nao reconhece tipagem de bibliotecas externas
 // lembrando que o typescript nao irá rodar em produção
yarn add @types/react-dom -D
yarn add @types/react -D // possivelmente não precisará